
@{
    ViewData["Title"] = "MinMax";
    Layout = "~/Views/Shared/_Layout.cshtml";




    void DrawTicTac()
    {

        for (int i = 0; i < 3; i++)
        {

            for (int j = 0; j < 3; j++)
            {
                int id = (j + i*3);
                if ((i+j) % 2 == 0)
                {

                    <div class="square-1">
                        <button Name="Move" value="@id" type="submit"><img class="cross" src="https://raw.githubusercontent.com/tomaszewskipablo/N-Queen-problem-in-asp.net/master/images/cross.png" alt="crown-1" border="0"></button>
                    </div>

                }
                else
                {

                    <div class="square-0">
                        <button Name="Move" value="@id" type="submit"> <img class="circle" src="https://raw.githubusercontent.com/tomaszewskipablo/N-Queen-problem-in-asp.net/master/images/circle.png" alt="crown-1" border="0"></button>
                    </div>
                }
            }
            <br />
        }
        <br />
    }

}


<h1>MinMax</h1>

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tic Tac Toe</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <section>
        <h1 class="game--title">Tic Tac Toe</h1>
        <div class="chessboard">
            @{
                @using (Html.BeginForm("Game", "MinMax", FormMethod.Post))
                {
                    DrawTicTac();
                }
            }
        </div>

        <button class="game--restart">Restart Game</button>
    </section>
    <script src="script.js"></script>
</body>
</html>



<style>
    .chessboard div {
        display: inline-block;
        width: 140px;
        height: 140px;
        border-radius: 30px;
        vertical-align: text-top;
        text-align: center;
    }

    .square-0 {
        background-color: gray;
        border: 2px solid #000000;
        text-align: right;
    }

    .square-1 {
        background-color: #282828;
        border: 2px solid #000000;
    }

    .cross {
        width: 100%;
        height: 90%;
        display: block;
    }
    .circle {
        width: 114%;
        height: 100%;
        display: block;
        margin: -8px;
    }

    .number {
        text-align: center;
        margin: auto;
    }


    button {
        width: 124px;
        height: 124px;
        margin:7px;
        background-color: Transparent;
        background-repeat: no-repeat;
        border: none;
        cursor: pointer;
        overflow: hidden;
        outline: none;
    }
</style>
